{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "outDir": "./esm",
        "rootDir": "./src",
        "noImplicitAny": true,
        "inlineSources": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
		"experimentalDecorators": true,
		"lib": ["ES2021", "DOM"],
		"target": "ES2021",
		"useDefineForClassFields": true,
        "declaration": true
    },
    "awesomeTypescriptLoaderOptions": {
        /* ... */
    }
}